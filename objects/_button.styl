// $BUTTON
// =============================================================================

// $VARIABLES



// $BASE
$button--base
    display: inline-block;
    height: 38px;
    padding: 0 30px;
    text-align: center;
    font-size: 11px;
    font-weight: 600;
    line-height: 38px;
    letter-spacing: .1rem;
    text-transform: uppercase;
    text-decoration: none;
    white-space: nowrap;
    border-radius: 4px;
    border: 1px solid #bbb;
    cursor: pointer;
    box-sizing: border-box;

    &:hover
        color: #333;
        border-color: #888;
        outline: 0;

// $DEFAULT
$button--default
    color: #555;
    background-color: transparent;

// $SKIN
$button--primary
    color: #FFF;
    background-color: #33C3F0;
    border-color: #33C3F0;

    &:hover
        background-color: #1EAEDB;
        border-color: #1EAEDB;



// Example
button,
.button,
input[type="submit"],
input[type="reset"],
input[type="button"]
    @extend $button--base;
    @extend $button--default;

.button--primary
    @extend $button--base;
    @extend $button--primary;

